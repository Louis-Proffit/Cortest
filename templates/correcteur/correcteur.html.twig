{% extends 'base.html.twig' %}

{% block content %}

    <br>
    <h1>Consulter un correcteur</h1>
    <br>
    <div class="row row-cols-auto">
        <div class="col">
            <a class="btn btn-primary"
               href="{{ path("correcteur_modifier", {"id":correcteur.id}) }}">Modifier</a>
        </div>
        <div class="col">
            <a class="btn btn-secondary"
               href="{{ path("correcteur_supprimer", {"id":correcteur.id}) }}">Supprimer</a>
        </div>
        <div class="col">
            <a class="btn btn-secondary"
               href="{{ path("correcteur_index") }}">Retour Ã  la liste</a>
        </div>
    </div>
    <br>
    <dl class="row">
        <dt class="col-md-3">Nom</dt>
        <dd class="col-md-9">{{ correcteur.nom }}</dd>
        <dt class="col-md-3">Grille</dt>
        <dd class="col-md-9">{{ grille.nom }}</dd>
        <dt class="col-md-3">Profil</dt>
        <dd class="col-md-9">{{ correcteur.profil.nom }}</dd>
    </dl>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Expression</th>
        </tr>
        </thead>
        <tbody>
        {% for echelleController in correcteur.echelles %}
            <tr>
                <td>{{ echelleController.echelle.nom }}</td>
                <td>{{ echelleController.expression }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

