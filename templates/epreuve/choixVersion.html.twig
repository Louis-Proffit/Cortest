{# templates/epreuve/choixVersion.html.twig #}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Choix de la version</title>
    </head>
    <body>
        <h1>Choix de la version</h1>
        <ul>
        {% if versions %}
            {% for version in versions %}
                <! pathNextPage is the name of the route to the next page >
                <li> Code : {{ version.epreuve.code }}, code de la version : {{ version.codeVersion }}, statut : {{ version.statut }}, descriptif : {{ version.descriptif }}, <a href =  {{  path(pathNextPage, { 'idEpreuve': version.epreuve.code, 'idVersion': version.codeVersion }) }}> Compl√©ter </a> </li>
            {% endfor %}
        {% else %}
            <p> Aucune version disponible </p>
        {% endif %}
        </ul>

        
    </body>
</html>