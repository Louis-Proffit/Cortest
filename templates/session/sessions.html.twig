{% extends "base.html.twig" %}
{% block body %}

    <h1>Sessions enregistrées</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Grille de réponses</th>
            <th>Consulter les réponses</th>
        </tr>
        </thead>
        <tbody>

        {% for session in sessions %}
            <tr>
                <td>{{ session.date_saisie|date('d-m-Y') }}</td>
                <td>{{ session.grille.nom }}</td>
                <td><a href="{{ path("consulter_session", {"id":session.id}) }}">Consulter</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block title %}
    Sessions
{% endblock %}

