{% extends 'base.html.twig' %}

{% block content %}
    <br>
    <h1>Concours</h1>
    <br>
    <p class="lead">Liste des niveaux concours disponibles.</p>
    <br>
    <div class="row row-cols-auto">
        <div class="col">
            <a class="btn btn-primary" href="{{ path("concours_creer") }}">Cr√©er</a>
        </div>
    </div>
    <br>
    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Grille</th>
            <th>Version batterie</th>
            <th>Type de concours</th>
            <th>Consulter</th>
        </tr>
        </thead>
        <tbody>
        {% for concours in items %}
            <tr class="align-middle">
                <td>{{ concours.nom }}</td>
                <td>{{ grilles[concours.index_grille].nom }}</td>
                <td>{{ concours.version_batterie }}</td>
                <td>{{ concours.type_concours }}</td>
                <td>
                    <a class="btn btn-link fw-bold btn-rounded"
                       href="{{ path("concours_consulter", {"id":concours.id}) }}">Lien</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
{% endblock %}

