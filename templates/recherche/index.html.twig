{% extends "base.html.twig" %}

{% block content %}
    <br>
    <h1>Recherche de candidats</h1>
    <br>
    {{ form_start(form) }}
    <table class="table">
        <thead>
        <tr>
            <th>Sélectionné</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Date de naissance</th>
            <th>Date de la session</th>
            <th>SGAP</th>
        </tr>
        </thead>
        <tbody>
        {% for reponse in form.reponses_candidat %}
            <tr>
                <td>{{ form_widget(reponse.checked, {"label":false}) }}</td>
                <td>{{ reponse.vars.value.reponses_candidat.nom }}</td>
                <td>{{ reponse.vars.value.reponses_candidat.prenom }}</td>
                <td>{{ reponse.vars.value.reponses_candidat.date_de_naissance|date("d/m/Y") }}</td>
                <td>{{ reponse.vars.value.reponses_candidat.session.date|date("d/m/Y") }}</td>
                <td>{{ reponse.vars.value.reponses_candidat.session.sgap.nom }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ form_end(form) }}
    <br>
{% endblock %}

