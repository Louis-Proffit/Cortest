{% extends 'base.html.twig' %}

{% block content %}

    <br>
    <h1>Etalonnages disponibles</h1>
    <br>
    <div class="row">
        <div class="col">
            <a class="btn btn-primary" href="{{ path("etalonnage_creer") }}">Ajouter</a>
        </div>
    </div>
    <br>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Référence</th>
            <th scope="col">Nom du score applicable</th>
            <th scope="col">Référence du score applicable</th>
            <th scope="col">Fichier de calcul présent</th>
            <th scope="col">Télécharger le fichier de calcul</th>
        </tr>
        </thead>
        <tbody>
        {% for etalonnage in etalonnages %}
            <tr {% if not etalonnage_file_exists[etalonnage.id] %}class="table-danger" {% else %} class="table-success"{% endif %}>
                <td>{{ etalonnage.nom }}</td>
                <td>{{ etalonnage.nom_php }}</td>
                <td>{{ etalonnage.score.nom }}</td>
                <td>{{ etalonnage.score.nom_php }}</td>
                <td>{{ etalonnage_file_exists[etalonnage.id] ? "Oui" : "Non" }}</td>
                <td>{% if etalonnage_file_exists[etalonnage.id] %}<a
                        href="{{ path("etalonnage_file", {"id":etalonnage.id}) }}" class="btn btn-link">
                            Consulter</a>{% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

