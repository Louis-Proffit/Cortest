{% extends 'base.html.twig' %}

{% block content %}

    <br>
    <h1>Configurer les bornes</h1>
    <br>
    {{ form_start(form) }}
    {{ form_row(form.nom) }}
    {% for echelleEtalonnage in form.echelles %}
        <div class="mb-3">
            <div class="form-label">{{ echelleEtalonnage.vars.value.echelle.nom }}</div>
            <div class="input-group">
                {% for bound in echelleEtalonnage.bounds %}
                    <div class="input-group-text">Classe {{ loop.index }}</div>
                    {{ form_widget(bound) }}
                    {% if loop.last %}
                        <div class="input-group-text">Classe {{ loop.index + 1 }}</div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    {% endfor %}

    <div class="row row-cols-auto">
        <div class="col">
            {{ form_row(form.submit) }}
        </div>
        <div class="col">
            <a class="btn btn-secondary"
               href="{{ path("etalonnage_consulter", {"id":form.vars.value.id}) }}">Annuler</a>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}

