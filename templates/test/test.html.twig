{% extends 'base.html.twig' %}

{% block content %}
    <br>
    <h1>Test</h1>
    <br>
    <div class="row row-cols-auto">
        <div class="col">
            <a class="btn btn-primary" href="{{ path("test_modifier", {"id":test.id}) }}">Modifier</a>
        </div>
        <div class="col">
            <a class="btn btn-primary" href="{{ path("test_supprimer", {"id":test.id}) }}">Supprimer</a>
        </div>
    </div>
    <br>
    <h3>Informations générales</h3>
    <br>
    <dl class="row">
        <dt class="col-md-3">Nom</dt>
        <dd class="col-md-9">{{ test.nom }}</dd>
        <dt class="col-md-3">Grille</dt>
        <dd class="col-md-9">{{ grille.nom }}</dd>
        <dt class="col-md-3">Nombre de questions</dt>
        <dd class="col-md-9">{{ grille.nombre_questions }}</dd>
        <dt class="col-md-3">Concours(s)</dt>
        {% for concours in test.concours %}
            {% if not loop.first %}
                <dt class="col-md-3"></dt>
            {% endif %}
            <dd class="col-md-9">{{ concours.intitule }}</dd>
        {% endfor %}
    </dl>
    <br>
    <h3>Questions</h3>
    <br>
    <table class="table table-sm">
        <thead>
        <tr>
            <th>Indice</th>
            <th>Type</th>
            <th>Intitulé</th>
            <th>Abréviation</th>
        </tr>
        </thead>
        <tbody>
        {% for question in test.questions %}
            <tr>
                <td>{{ question.indice }}</td>
                <td>{{ question.type }}</td>
                <td>{{ question.intitule }}</td>
                <td>{{ question.abreviation }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
{% endblock %}

