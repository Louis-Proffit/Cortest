{% extends 'base.html.twig' %}

{% block content %}
    <br>
    <h1>Niveaux scolaires</h1>
    <br>
    <p class="lead">Liste des niveaux scolaires disponibles.</p>
    <br>
    <div class="row row-cols-auto">
        <div class="col">
            <a class="btn btn-primary" href="{{ path("niveau_scolaire_creer") }}">Cr√©er</a>
        </div>
    </div>
    <br>
    <table class="table">
        <thead>
        <tr>
            <th>Indice</th>
            <th>Nom</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>
        </thead>
        <tbody>
        {% for niveau in items %}
            <tr>
                <td>{{ niveau.indice }}</td>
                <td>{{ niveau.nom }}</td>
                <td>
                    <a class="btn btn-link fw-bold"
                       href="{{ path("niveau_scolaire_modifier", {"id":niveau.id}) }}">Lien</a>
                </td>
                <td>
                    <a class="btn btn-link fw-bold link-danger"
                       href="{{ path("niveau_scolaire_supprimer_confirmer", {"id":niveau.id}) }}">
                        Lien
                        &nbsp;
                        <i class="fa fa-check"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
{% endblock %}

