{% extends 'base.html.twig' %}

{% block content %}
    <br>
    <h1>Profils disponibles</h1>
    <br>
    <p class="lead">Liste des profils utilisables par l'application Cortest.</p>
    <br>
    <div class="row row-cols-auto">
        <div class="col">
            <a class="btn btn-primary" href="{{ path("profil_creer") }}">Cr√©er</a>
        </div>
    </div>
    <br>
    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Echelles</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>
        </thead>
        <tbody>
        {% for profil in items %}
            <tr>
                <td>{{ profil.nom }}</td>
                <td>
                    {% for echelle in profil.echelles %}
                        {{ echelle.nom }}
                        {{ not loop.last ? ' - ' : '' }}
                    {% endfor %}
                </td>
                <td><a class="btn btn-primary" href="{{ path('profil_modifier', {"id":profil.id}) }}">Modifier</a></td>
                <td><a class="btn btn-primary" href="{{ path('profil_supprimer', {"id":profil.id}) }}">Supprimer</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
{% endblock %}

