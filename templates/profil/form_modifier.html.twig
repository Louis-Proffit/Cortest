{% extends "base.html.twig" %}

{% block content %}

    <h2>Modifier un profil</h2>
    <br>
    {{ form_start(form) }}
    {{ form_row(form.nom) }}
    {% for echelle in form.echelles %}
        <div class="mb-3">
            <div class="form-label"><b>Echelle {{ echelle.vars.value.nom }}</b></div>
            <div class="row row-cols-auto">
                <div class="col">
                    {{ form_row(echelle.nom) }}
                </div>
                <div class="col">
                    {{ form_row(echelle.nom_php) }}
                </div>
                <div class="col">
                    {{ form_row(echelle.type) }}
                </div>
            </div>
        </div>
    {% endfor %}
    {{ form_end(form) }}

{% endblock %}


