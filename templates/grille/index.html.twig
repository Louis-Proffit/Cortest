{% extends 'base.html.twig' %}

{% block content %}
    <br>
    <h1>Feuilles-réponses</h1>
    <br>
    <p class="lead">Liste des feuilles-réponses utilisables par l'application Cortest.</p>
    <br>
    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Nombre de questions</th>
        </tr>
        </thead>
        <tbody>
        {% for grille in grilles %}
            <tr>
                <td>{{ grille.nom }}</td>
                <td>{{ grille.nombre_questions }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
{% endblock %}

