{% extends 'base.html.twig' %}

{% block content %}
    <br>
    <h1>Structure</h1>
    <br>
    <div class="row row-cols-auto">
        <div class="col">
            <a class="btn btn-primary" href="{{ path("structure_modifier", {"id":structure.id}) }}">Modifier</a>
        </div>
        <div class="col">
            <a class="btn btn-danger"
               href="{{ path('structure_supprimer_confirmer', {"id":structure.id}) }}">
                Supprimer&nbsp;<i class="fa fa-check"></i>
            </a>
        </div>
        <div class="col">
            <a class="btn btn-secondary" href="{{ path("structure_index") }}">Retour Ã  la liste</a>
        </div>
    </div>
    <br>
    <dl class="row">
        <dt class="col-md-3">Nom</dt>
        <dd class="col-md-9">{{ structure.nom }}</dd>
        <dt class="col-md-3">Correcteur(s)</dt>
        {% for correcteur in structure.correcteurs %}
            {% if not loop.first %}
                <dt class="col-md-3"></dt>
            {% endif %}
            <dd class="col-md-9">{{ correcteur.nom }}</dd>
        {% endfor %}
        <dt class="col-md-3">Etalonnage(s)</dt>
        {% for etalonnage in structure.etalonnages %}
            {% if not loop.first %}
                <dt class="col-md-3"></dt>
            {% endif %}
            <dd class="col-md-9">{{ etalonnage.nom }}</dd>
        {% endfor %}
        <dt class="col-md-3">Graphique(s)</dt>
        {% for graphique in structure.graphiques %}
            {% if not loop.first %}
                <dt class="col-md-3"></dt>
            {% endif %}
            <dd class="col-md-9">{{ graphique.nom }}</dd>
        {% endfor %}
        <dt class="col-md-3">Echelle(s) (total: {{ structure.echelles.count }})</dt>
        {% for echelle in structure.echelles %}
            {% if not loop.first %}
                <dt class="col-md-3"></dt>
            {% endif %}
            <dd class="col-md-9">{{ echelle.nom }} | php: {{ echelle.nom_php }}</dd>
        {% endfor %}
    </dl>
    <br>
{% endblock %}

