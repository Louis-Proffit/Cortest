{% extends 'base.html.twig' %}

{% block content %}
    <br>
    <h1>Structures</h1>
    <br>
    <p class="lead">Liste des structures utilisables par l'application Cortest.</p>
    <br>
    <div class="row row-cols-auto">
        <div class="col">
            <a class="btn btn-primary" href="{{ path("structure_creer") }}">Cr√©er</a>
        </div>
    </div>
    <br>
    <table class="table">
        <thead>
        <tr class="align-middle">
            <th>Nom</th>
            <th>Echelles</th>
            <th>Correcteurs</th>
            <th>Etalonnages</th>
            <th>Graphiques</th>
            <th>Consulter</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>
        </thead>
        <tbody>
        {% for structure in structures %}
            <tr class="align-middle">
                <td>{{ structure.nom }}</td>
                <td>{{ structure.echelles.count }}</td>
                <td>{{ structure.correcteurs.count }}</td>
                <td>{{ structure.etalonnages.count }}</td>
                <td>{{ structure.graphiques.count }}</td>
                <td><a class="btn btn-link fw-bold"
                       href="{{ path('structure_consulter', {"id":structure.id}) }}">Lien</a>
                </td>
                <td><a class="btn btn-link fw-bold"
                       href="{{ path('structure_modifier', {"id":structure.id}) }}">Lien</a>
                </td>
                <td><a class="btn btn-link fw-bold link-danger"
                       href="{{ path('structure_supprimer', {"id":structure.id}) }}">Lien</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
{% endblock %}

