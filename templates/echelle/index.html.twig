{% extends 'base.html.twig' %}

{% block content %}
    <br>
    <h1>Echelles disponibles</h1>
    <br>
    <p class="lead">Liste des Ã©chelles utilisables par l'application Cortest.</p>
    <br>
    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Nom php</th>
            <th>Profil</th>
            <th>Type</th>
            <th>Modifier</th>
        </tr>
        </thead>
        <tbody>
        {% for echelle in items %}
            <tr>
                <td>{{ echelle.nom }}</td>
                <td>{{ echelle.nom_php }}</td>
                <td>{{ echelle.profil.nom }}</td>
                <td>{{ echelle.type }}</td>
                <td>
                    <a class="btn btn-primary"
                       href="{{ path("profil_modifier", {"id":echelle.profil.id}) }}">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
{% endblock %}

