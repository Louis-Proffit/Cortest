{% extends 'base.html.twig' %}

{% block content %}
    <br>
    <h1>Echelles disponibles</h1>
    <br>
    <p class="lead">Liste des échelles utilisables par l'application Cortest.</p>
    <br>
    <div class="row row-cols-auto">
        <div class="col">
            <a class="btn btn-primary" href="{{ path("echelle_creer") }}">Créer</a>
        </div>
    </div>
    <br>
    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Nom php</th>
            <th>Type</th>
            <th>Modifier</th>
        </tr>
        </thead>
        <tbody>
        {% for echelle in items %}
            <tr>
                <td>{{ echelle.nom }}</td>
                <td>{{ echelle.nom_php }}</td>
                <td>{{ echelle.type }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path("echelle_modifier", {"id":echelle.id}) }}">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
{% endblock %}

